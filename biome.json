{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "!src/**/config.ts",
      "index.html",
      "biome.json",
      "package.json",
      "tsconfig.json",
      "vite.config.ts"
    ]
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "rules": {
      "a11y": "off",
      "correctness": {
        "noPrivateImports": "error",
        "useUniqueElementIds": "off"
      },
      "performance": {
        "noReExportAll": "error"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  }
}
